<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_portrait_ledger" model="report.paperformat">
        <field name="name">US Ledger Portrait</field>
        <field name="default" eval="False" />
        <field name="format">custom</field>
        <field name="page_height">432</field>
        <field name="page_width">279</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">12</field>
        <field name="margin_bottom">12</field>
        <field name="margin_left">12</field>
        <field name="margin_right">12</field>
        <field name="header_line" eval="True" />
        <field name="header_spacing">12</field>
        <field name="dpi">110</field>
    </record>

    <record id="action_report_production_kit" model="ir.actions.report">
        <field name="name">Production Kit</field>
        <field name="model">mrp.planned.pick.kit</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">mrp_planned_pick_kit.report_production_kit</field>
        <field name="report_file">mrp_planned_pick_kit.report.report_production_kit_templates</field>
        <field name="binding_model_id" ref="model_mrp_planned_pick_kit"/>
        <field name="paperformat_id" ref="mrp_planned_pick_kit.paperformat_portrait_ledger"/>
    </record>

    <record id="action_report_production_kit_images" model="ir.actions.report">
        <field name="name">Production Kit Images</field>
        <field name="model">mrp.planned.pick.kit</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">mrp_planned_pick_kit.report_production_kit_images</field>
        <field name="report_file">mrp_planned_pick_kit.report.report_production_kit_templates</field>
        <field name="binding_model_id" ref="model_mrp_planned_pick_kit"/>
        <field name="paperformat_id" ref="mrp_planned_pick_kit.paperformat_portrait_ledger"/>
    </record>

</odoo>
