<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="leave_policy_view_form" model="ir.ui.view">
        <field name="name">leave.policy.view.form</field>
        <field name="model">leave.policy</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="year" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="generate_accrual_report" string="Accrual Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="leave_policy_action" model="ir.actions.act_window">
        <field name="name">Accrual Report</field>
        <field name="res_model">leave.policy</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_leave_accrual_policy"/>
    </record>
</odoo>