<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="blanket_order">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="oe_structure"/>

                    <h2>Blanket Purchase Order <span t-field="o.name"/></h2>

                    <div class="row mt32 mb32">
                        <div class="col-xs-3">
                            <strong>Vendor:</strong><br/>
                            <span t-field="o.vendor_id.name"/>
                        </div>
                        <div class="col-xs-3">
                            <strong>Start Date:</strong><br/>
                            <span t-field="o.ordering_date"/>
                        </div>
                        <div class="col-xs-3">
                            <strong>Lead Time:</strong><br/>
                            <span t-field="o.lead_time"/> days
                        </div>
                        <div class="col-xs-3">
                            <strong>Source:</strong><br/>
                            <span t-field="o.origin"/>
                        </div>
                    </div>

                    <t t-if="o.line_ids">
                        <h3>Products</h3>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th><strong>Description</strong></th>
                                    <th class="text-right"><strong>Qty</strong></th>
                                    <th class="text-center" groups="product.group_uom">
                                        <strong>UoM</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.line_ids" t-as="line_ids">
                                    <td>
                                        [ <span t-field="line_ids.product_id.code"/> ]
                                        <span t-field="line_ids.product_id.name"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line_ids.product_qty"/>
                                    </td>
                                    <t>
                                        <td class="text-center" groups="product.group_uom">
                                            <span t-field="line_ids.product_uom_id.category_id.name"/>
                                        </td>
                                    </t>
                                </tr>
                            </tbody>
                        </table>
                    </t>

                    <t t-if="o.purchase_ids">
                        <h3>Blanket Release Details</h3>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th class="text-left"><strong>Reference </strong></th>
                                    <th><strong>Vendor </strong></th>
                                    <th class="text-center"><strong>Date </strong></th>
                                    <th class="text-center"><strong>Total </strong></th>
                                    <th class="text-right"><strong>Status </strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.purchase_ids.sorted(key=lambda b: b.date_planned)" t-as="purchase_id">
                                    <td class="text-left">
                                        <span t-field="purchase_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="purchase_id.partner_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="purchase_id.date_planned" t-field-options='{"format": "MM/dd/y"}'/>
                                        <!--<span t-field="purchase_id.short_local_date"/>-->
                                    </td>
                                    <td class="text-center">
                                        <span t-field="purchase_id.amount_total"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="purchase_id.invoice_status"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </t>

                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </t>
</template>
</data>
</odoo>
