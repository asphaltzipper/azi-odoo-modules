<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_landscape_us" model="report.paperformat">
        <field name="name">US Letter Landscape</field>
        <field name="default" eval="True" />
        <field name="format">Letter</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">12</field>
        <field name="margin_bottom">12</field>
        <field name="margin_left">25</field>
        <field name="margin_right">12</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_report_shelf_product_listing" model="ir.actions.report">
        <field name="name">Product Listing</field>
        <field name="model">stock.shelf</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">shelf_location.shelf_product_listing</field>
        <field name="report_file">shelf_location.shelf_product_listing</field>
        <field name="paperformat_id" ref="paperformat_landscape_us"/>
        <field name="binding_model_id" ref="shelf_location.model_stock_shelf"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_shelf_label" model="ir.actions.report">
        <field name="name">Azi Location Labels</field>
        <field name="model">stock.shelf</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">shelf_location.azi_report_shelflabel</field>
        <field name="report_file">shelf_location.shelf_label_templates</field>
        <field name="paperformat_id" ref="base.paperformat_us"/>
        <field name="binding_model_id" ref="shelf_location.model_stock_shelf"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_shelf_count_sheets" model="ir.actions.report">
        <field name="name">Shelf Count Sheets</field>
        <field name="model">report.stock.shelf.products</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">shelf_location.shelf_count_sheets</field>
        <field name="report_file">shelf_location.report.shelf_count_sheets_templates</field>
        <field name="paperformat_id" ref="paperformat_landscape_us"/>
        <field name="binding_model_id" ref="shelf_location.model_report_stock_shelf_products"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
