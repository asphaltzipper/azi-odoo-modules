<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- add medium big image to product template form view -->
    <record id="product_template_form_azi_product" model="ir.ui.view">
        <field name="name">product.template.azi_product.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='image_1920']" position="attributes">
                <attribute name="options">{'preview_image': 'image_medium_big'}</attribute>
                <attribute name="class">pull-right</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_product_supplierinfo_tree" model="ir.ui.view">
        <field name="name">view.product.supplierinfo.tree</field>
        <field name="model">product.supplierinfo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="partner_id"/>
                <field name="product_code"/>
                <field name="min_qty"/>
                <field name="price"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>

    <!-- explicitly control display of fields in seller_ids tree -->
    <record id="view_product_vendor_inherit" model="ir.ui.view">
        <field name="name">product.template.vendor.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="purchase.view_product_supplier_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='seller_ids']" position="attributes">
                <attribute name="context">{'default_product_tmpl_id':context.get('product_tmpl_id',active_id), 'product_template_invisible_variant': True, 'tree_view_ref':'azi_product.view_product_supplierinfo_tree'}</attribute>
            </xpath>
        </field>
    </record>

    <!-- Added Supplier Code Search -->
    <record id="azi_product_template_search" model="ir.ui.view">
        <field name="name">azi.product.template.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='categ_id']" position="after">
                <field name="seller_ids" string="Supplier Code" filter_domain="[('seller_ids.product_code','ilike',self)]"/>
            </xpath>
        </field>
    </record>
    <record id="view_template_property_form" model="ir.ui.view">
        <field name="name">view.template.property.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <button id="stock.view_diagram_button" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </button>
        </field>
    </record>
    <record id="product_template_form_view_procurement_button" model="ir.ui.view">
        <field name="name">product.template.procurement</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
        <field name="arch" type="xml">
            <button name="action_view_orderpoints" position="replace"/>
            <button name="action_view_orderpoints" position="replace"/>
        </field>
    </record>
    <record id="product_form_view_procurement_button" model="ir.ui.view">
        <field name="name">product.product.procurement</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.product_form_view_procurement_button"/>
        <field name="arch" type="xml">
            <button name="%(stock.action_open_routes)d" position="replace"/>
            <button name="action_view_orderpoints" position="replace"/>
            <button name="action_view_orderpoints" position="replace"/>
        </field>
    </record>
</odoo>
