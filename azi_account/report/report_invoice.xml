<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="azi_invoice_address_alignment" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@t-if='o.partner_id.ref']" position="replace">
            </xpath>
            <xpath expr="//t[@t-set='address']" position="attributes">
                <attribute name="groups">!sale.group_delivery_invoice_address</attribute>
            </xpath>
            <xpath expr="//div[@class='page']/table/thead/tr/th[@name='th_taxes']" position="replace">
                <th class="text-right"></th>
            </xpath>
            <xpath expr="//div[@class='page']/table/thead/tr/th[6]" position="replace">
                <th class="text-right">Price</th>
            </xpath>
            <xpath expr="//div[@class='page']/table/tbody/t/tr/t/td[5]" position="replace">
                <td class="text-right"></td>
            </xpath>
            <xpath expr="//t[@t-set='address']" position="before">
                <div style="position: relative; top: 60; padding-bottom: 1.875in;"
                     groups="sale.group_delivery_invoice_address">
                    <div class="mt8 col-xs-5" style="position: absolute; top: 0; left: .3125in">
                        <strong>Invoicing address:</strong>
                        <div t-field="o.partner_id"
                             t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                        <span t-if="o.partner_id.vat">TIN:
                            <span t-field="o.partner_id.vat"/>
                        </span>
                    </div>
                    <div class="mt8 col-xs-5" style="position: absolute; top: 0;  left: 4.9375in">
                        <strong>Shipping address:</strong>
                        <div t-field="o.partner_shipping_id"
                             t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                        <span t-if="o.partner_shipping_id.vat">TIN:
                            <span t-field="o.partner_shipping_id.vat"/>
                        </span>
                    </div>
                </div>
            </xpath>
        </template>

        <record id="account_azi_invoice_no_header_footer" model="ir.actions.report">
            <field name="name">Invoices no Header/Footer</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">azi_account.azi_invoice_no_header_footer_main</field>
            <field name="report_file">account.report_invoice_document</field>
            <field name="attachment_use">True</field>
            <field name="attachment">(object.state in ('open','paid')) and ('letterhead-'+(object.number or '').replace('/','')+'.pdf')</field>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="binding_type">report</field>
        </record>

        <template id="tax_groups_total_and_retail">
            <t t-foreach="tax_totals_report['group_taxes']" t-as="group_tax">
                <tr>
                    <td>
                        <span t-esc="group_tax['tax_label']"/>
                    </td>
                    <td class="text-end o_price_total">
                        <span class="text-nowrap" t-esc="group_tax['tax_amount']"/>
                    </td>
                </tr>
            </t>
        </template>


        <template id="report_invoice_document_total_inherit" inherit_id="account.report_invoice_document">
            <xpath expr="//t[@t-set='tax_totals']" position="before">
                <t t-set="is_invoice" t-value="o.move_type in ('out_invoice', 'in_invoice')"/>
                <t t-set="tax_totals_report" t-value="o.tax_totals_report"/>
            </xpath>
            <xpath expr="//p[@name='payment_communication']" position="replace"/>
        </template>
        <template id="document_tax_totals" inherit_id="account.document_tax_totals">
            <xpath expr="//t[@t-call='account.tax_groups_totals']" position="replace">
                <t t-if="is_invoice">
                    <t t-call="azi_account.tax_groups_total_and_retail"/>
                </t>
                <t t-else="">
                    <t t-call="account.tax_groups_totals"/>
                </t>

            </xpath>
        </template>

        <template id="azi_invoice_no_header_footer" inherit_id="account.report_invoice_document" primary="True">
            <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
                <attribute name="t-call"></attribute>
            </xpath>
        </template>

        <template id="azi_invoice_no_header_footer_main">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name"
                         t-att-data-oe-id="o and o.id">
                        <t t-call="azi_account.azi_invoice_no_header_footer" t-lang="o.partner_id.lang"/>
                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>
