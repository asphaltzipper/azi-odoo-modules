<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- add bank statement info to journal item tree view -->
    <record id="account_move_line_withproduct" model="ir.ui.view">
        <field name="name">account.move.line</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="statement_id" groups="base.group_no_one"/>
            </field>
        </field>
    </record>

    <!-- add bank statement info to journal entry form view -->
    <record id="account_move_form_withproduct" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='name']" position="after">
                <field name="statement_id" groups="base.group_no_one"/>
                <field name="statement_line_id" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>

    <!-- add aging filters to invoice search view -->
    <record id="view_account_invoice_filter_aged" model="ir.ui.view">
        <field name="name">account.invoice.select</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='late']" position="after">
                <filter name="late30" string="30+ days" domain="['&amp;', ('invoice_date_due', '&lt;', (context_today() - relativedelta(days=30)).strftime('%Y-%m-%d')), ('state', '=', 'open')]" help="Overdue invoices, maturity date passed"/>
                <filter name="late60" string="60+ days" domain="['&amp;', ('invoice_date_due', '&lt;', (context_today() - relativedelta(days=60)).strftime('%Y-%m-%d')), ('state', '=', 'open')]" help="Overdue invoices, maturity date passed"/>
                <filter name="late90" string="90+ days" domain="['&amp;', ('invoice_date_due', '&lt;', (context_today() - relativedelta(days=90)).strftime('%Y-%m-%d')), ('state', '=', 'open')]" help="Overdue invoices, maturity date passed"/>
            </xpath>
        </field>
    </record>

    <record id="invoice_so_reference" model="ir.ui.view">
        <field name="name">account.invoice.so.reference</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="payment_reference" position="before">
                <field name="name"/>
            </field>
        </field>
    </record>
    <record id="invoice_so_reference" model="ir.ui.view">
        <field name="name">account.invoice.so.reference</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name='user_id' position="before">
                <field name="name"/>
            </field>
        </field>
    </record>
