<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_attachment_form" model="ir.ui.view">
            <field name="model">ir.attachment</field>
            <field name="inherit_id" ref="base.view_attachment_form"/>
            <field name="arch" type="xml">
                <field name="mimetype" position="after">
                    <field name="priority" widget="priority"/>
                </field>
            </field>
        </record>
        <record id="view_ir_attachment_kanban" model="ir.ui.view">
            <field name="name">ir.attachment.kanban</field>
            <field name="model">ir.attachment</field>
            <field name="inherit_id" ref="mail.view_document_file_kanban"/>
            <field name="arch" type="xml">
                <field name="create_uid" position="before">
                    <field name="priority"/>
                </field>
                <xpath expr="//div[hasclass('o_kanban_details')]/div[hasclass('o_kanban_details_wrapper')]/div[hasclass('o_kanban_record_body')]" position="inside">
                    <field name="priority" widget="priority"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>