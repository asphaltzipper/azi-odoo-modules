<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_request_kanban_form" model="ir.ui.view">
        <field name="name">stock.request.kanban.form</field>
        <field name="model">stock.request.kanban</field>
        <field name="inherit_id" ref="stock_request_kanban.view_stock_request_kanban_form"/>
        <field name="arch" type="xml">
            <sheet position="before">
                <header>
                    <button name="action_submit" type="object" string="Submit" states="draft" class="btn-primary"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft,submit" class="btn-primary"/>
                    <button name="action_done" type="object" string="Confirm" states="submit" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submit,done"/>
                </header>
            </sheet>
            <field name="product_id" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </field>
            <field name="warehouse_id" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </field>
            <field name="location_id" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </field>
            <field name="route_id" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </field>
            <field name="procurement_group_id" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </field>
            <field name="company_id" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </field>
             <field name="product_uom_qty" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </field>
            <field name="product_uom_id" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </field>
        </field>
    </record>
    <record id="view_stock_request_kanban_tree" model="ir.ui.view">
        <field name="name">stock.request.kanban.tree</field>
        <field name="model">stock.request.kanban</field>
        <field name="inherit_id" ref="stock_request_kanban.view_stock_request_kanban_tree"/>
        <field name="arch" type="xml">
            <field name="active" position="after">
                <field name="state"/>
            </field>
        </field>
    </record>

    <record id="stock_request_kanban_search" model="ir.ui.view">
        <field name="name">stock.request.kanban.search</field>
        <field name="model">stock.request.kanban</field>
        <field name="inherit_id" ref="stock_request_kanban.stock_request_kanban_search"/>
        <field name="arch" type="xml">
            <filter name="inactive" position="after">
                <filter name="state_draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="state_submit" string="Submit" domain="[('state','=','submit')]"/>
                <filter name="state_done" string="Done" domain="[('state','=','done')]"/>
                <filter name="state_cancel" string="Cancel" domain="[('state','=','cancel')]"/>
            </filter>
            <filter name="location" position="after">
                <filter name="state" string="Status" domain="[]" context="{'group_by':'state'}"/>
            </filter>
        </field>
    </record>
</odoo>