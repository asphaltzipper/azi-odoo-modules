<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_view_form_credit_app" model="ir.ui.view">
        <field name="name">sale.order.azi.form.credit.app</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="client_order_ref" position="after">
                <field name="credit_app_date"/>
            </field>
        </field>
    </record>

    <record id="account_invoice_view_form_credit_app" model="ir.ui.view">
        <field name="name">azi.account.invoice.form.credit.app</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="sale.account_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='invoice_payment_term_id']" position="replace"/>
            <xpath expr="//field[@name='invoice_payment_term_id']" position="replace"/>
            <field name="invoice_date" position="after">
                <field name="invoice_payment_term_id"
                       attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"
                       context="{'example_date': invoice_date, 'example_amount': tax_totals['amount_total']}"
                       placeholder="Terms"/>
                <field name="credit_app_date"/>
            </field>
        </field>
    </record>

</odoo>
