<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_bom_config_mgmt_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.config.mgmt.form</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="product_configurator_mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    string="Reconfigure"
                    name="button_update_config_sets"
                    type="object"
                    icon="fa-refresh"
                    class="oe_stat_button"
                    attrs="{'invisible':['|', ('product_id', '!=', False), ('config_ok', '=', False)]}"
                    groups="product_configurator_mrp.group_product_configurator_mrp"
                />
            </div>
            <field name="product_id" position="after">
                <field name="sequence"/>
            </field>
        </field>
    </record>

</odoo>
